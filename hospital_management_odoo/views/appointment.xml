<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="appointment_details_view_form" model="ir.ui.view">
        <field name="name">appointment_details_form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="appointment_status" widget="statusbar" options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <field name="patient_img" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="appointment_id"/>
                        </h1>
                    </div>
                    <group>
                        <field name="date_of_creation"/>
                    </group>
                    <group>
                        <field name="patient_id"/>
                        <field name="name"/>
                        <field name="appointment_date"/>
<!--                        <field name="doctor_id"/>-->
                    </group>
                </sheet>

            </form>
        </field>
    </record>
    <record id="appointment_details_view_tree" model="ir.ui.view">
        <field name="name">appointment_details_kanban</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="_tree">
                <field name="appointment_id"/>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="date_of_creation"/>
                <field name="appointment_date"/>
                <field name="appointment_status"/>
<!--                <field name="doctor_id"/>-->
            </list>
        </field>
    </record>
    <record id="actions_appointment_details" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Appointment
            </p>
            <p>
                Create and manage the Appointments that will be managed by Odoo from here. appointments can be
                created and maintained from here.
            </p>
        </field>
    </record>
</odoo>