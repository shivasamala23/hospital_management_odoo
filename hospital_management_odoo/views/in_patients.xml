    <!-- Kanban View -->
    <record id="in_patients_view_kanban" model="ir.ui.view">
        <field name="name">in.patients.view.kanban</field>
        <field name="model">in.patient</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="admission_id"/>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="admission_date"/>
                <field name="discharge_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="patient_id"/>
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <ul>
                                        <li><field name="admission_id"/></li>
                                        <li><field name="name"/></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="in_patients_action" model="ir.actions.act_window">
        <field name="name">In patients</field>
        <field name="res_model">in.patient</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first in patients!
            </p>
        </field>
