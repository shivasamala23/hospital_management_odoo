<!--                </header>-->
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="admission_id"/>
                        </h1>
                    </div>
                    <notebook>
                        <page string="General Information">
                            <group>
                                <group>
                                    <field name="patient_id"/>
                                    <field name="name"/>
                                </group>
                                <group>
                                    <field name="doctor_id"/>
                                    <field name="admission_date"/>
                                    <field name="discharge_date"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- List View -->
